@model Report
@{
    ViewData["Title"] = "Редактирование Отчёта";
    string entityName = "Report";
}

<div class="center_element">
    <h3>Редактирование Отчёта @Model.ID</h3>

    @using (Html.BeginForm("FinishUpdate", entityName, FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <table class="table table-bordered">
            <tr>
                <td>@Html.LabelFor(m => m.Body)</td>
                <td>
                    @Html.TextBoxFor(m => m.Body, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.TakenMeasures)</td>
                <td>
                    @Html.TextBoxFor(m => m.TakenMeasures, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.TakenMeasures, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Conclusion)</td>
                <td>
                    @Html.TextBoxFor(m => m.Conclusion, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Conclusion, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </td>
            </tr>
        </table>
    }
</div>
@using Lesnichestvo.DAL.Entities
@using System.Security.Claims
@using Lesnichestvo.Extensions
@inject IHttpContextAccessor Accessor

@model List<Work>
@{
    ViewData["Title"] = "Работы";
}

<div class="center_element">
    <div>Таблица "Работы"</div>
    <div>@Html.ActionLink("Вернуться на главную страницу", "Index", "Home", new { area = "" })</div>
    <table align="center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Часы</th>
                <th>Тип работы</th>
                <th>Предыдущая работа</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.HoursSpent</td>
                    <td>@item.TypeID</td>
                    <td>@item.PreviousWorkID</td>
                    @{
                        if (Accessor.HttpContext?.IsUserInRoles("admin","manager") == true)
                        {
                            <td>
                                <ul>
                                    <li>@Html.ActionLink("Редактировать", "BeginUpdate", "Work", new { id = item.ID })</li>
                                    @if (Accessor.HttpContext?.IsUserInRoles("admin") == true)
                                    {
                                        <li>@Html.ActionLink("Удалить", "Delete", "Work", new { id = item.ID }, htmlAttributes: new { onclick = "return confirm('Удалить запись?');" })</li>
                                    }
                                </ul>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
        <tfoot>
            @if (Accessor.HttpContext?.IsUserInRoles("admin","manager") == true)
            {
                @using (Html.BeginForm("Create", "Work", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <tr>
                        <td>Авто</td>
                        <td><input class="form-control" type="date" name="Date" /></td>
                        <td><input class="form-control" type="number" name="HoursSpent" /></td>
                        <td><input class="form-control" type="number" name="TypeID" /></td>
                        <td><input class="form-control" type="number" name="PreviousWorkID" /></td>
                        <td><input class="btn btn-primary" type="submit" value="Добавить" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessage("Date", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("HoursSpent", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("TypeID", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("PreviousWorkID", "", new { @class = "text-danger" })</td>
                    </tr>
                }
            }
        </tfoot>
    </table>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
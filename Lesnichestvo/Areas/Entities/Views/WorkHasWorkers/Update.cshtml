@model WorkHasWorkers
@{
    ViewData["Title"] = "Редактирование связи работы и работника";
    string entityName = "WorkHasWorkers";
}

<div class="center_element">
    <h3>Редактирование связи работы и работника @Model.ID</h3>
    @using (Html.BeginForm("FinishUpdate", entityName, FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-bordered">
            <tr>
                <td>@Html.LabelFor(m => m.WorkID)</td>
                <td>
                    @Html.TextBoxFor(m => m.WorkID, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.WorkID, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.WorkerID)</td>
                <td>
                    @Html.TextBoxFor(m => m.WorkerID, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.WorkerID, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </td>
            </tr>
        </table>
    }
</div>

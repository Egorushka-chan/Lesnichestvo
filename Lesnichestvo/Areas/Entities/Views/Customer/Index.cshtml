@model List<Customer>
@{
    ViewData["Title"] = "Заказчики";
    string entityName = "Customer";
}

<div class="center_element">
    <div>Таблица "Заказчики"</div>
    <div>@Html.ActionLink("Вернуться на главную страницу", "Index", "Home", new { area = "" })</div>
    @using (Html.BeginForm("Filter", entityName, FormMethod.Get)){
        <ul class="horizontal">
            @if (!string.IsNullOrEmpty(ViewBag.NameType))
            {
                <li><input type="text" class="form-control mb-3" placeholder="Фильтр по имени и типу" name="nameType" value="@ViewBag.NameType" /></li>
            }
            else
            {
                <li><input type="text" class="form-control mb-3" placeholder="Фильтр по имени и типу" name="nameType" /></li>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Status))
            {
                <li><input type="text" class="form-control mb-3" placeholder="Фильтр по статусу" name="status" value="@ViewBag.Status"/></li>
            }
            else
            {
                <li><input type="text" class="form-control mb-3" placeholder="Фильтр по статусу" name="status" /></li>
            }
        </ul>
        <input type="submit" class="btn btn-primary mb-3" value="Применить фильтры" />
    }        
    
    <table align="center" class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>ИНН</th>
                <th>Тип компании</th>
                <th>Дата контракта</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model)
            {
                <tr>
                    <td>@customer.ID</td>
                    <td>@customer.Name</td>
                    <td>@customer.INN</td>
                    <td>@customer.CompanyType</td>
                    <td>@customer.ContractDate?.ToShortDateString()</td>
                    <td>@customer.Status</td>
                    @{
                        if (Accessor.HttpContext?.IsUserInRoles("admin","manager") == true)
                        {
                            <td>
                                <ul>
                                    <li>@Html.ActionLink("Редактировать", "BeginUpdate", entityName, new { id = customer.ID })</li>
                                    @if (Accessor.HttpContext?.IsUserInRoles("admin") == true)
                                    {
                                        <li>
                                        @Html.ActionLink("Удалить", "Delete", entityName, new { id = customer.ID },
                                                htmlAttributes: new { onclick = "return confirm('Удалить запись?');" })
                                        </li>
                                    }
                                </ul>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
        <tfoot>
            @{
                if (Accessor.HttpContext?.IsUserInRoles("admin", "manager") == true)
                {
                    <form asp-controller=@entityName asp-action="Create" method="post">
                    <tr>
                        <td class="mb-3">Авто</td>
                        <td><input class="form-control" type="text" name="Name" placeholder="Новый заказчик" /></td>
                        <td><input class="form-control" type="text" name="INN" placeholder="Неизвестный" /></td>
                        <td><input class="form-control" type="text" name="CompanyType" /></td>
                        <td><input class="form-control" type="date" name="ContractDate" /></td>
                        <td><input class="form-control" type="text" name="Status"/></td>
                        <td><input class="btn btn-primary" type="submit" value="Добавить" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessage("Name", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("INN", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("CompanyType", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("ContractDate", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Status", "", new { @class = "text-danger" })</td>
                    </tr>
                    </form>
                }
            }
        </tfoot>
    </table>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>


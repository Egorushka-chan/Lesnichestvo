@model List<Worker>
@{
    ViewData["Title"] = "Работники";
    string entityName = "Worker";
}

<div class="center_element">
    <div>Таблица "Работники"</div>
    <div>@Html.ActionLink("Вернуться на главную страницу", "Index", "Home", new { area = "" })</div>
    <table align="center" class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Должность</th>
                <th>Приём на работу</th>
                <th>Дата рождения</th>
                <th>Зарплата</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var w in Model)
            {
                <tr>
                    <td>@w.ID</td>
                    <td>@w.Name</td>
                    <td>@w.Surname</td>
                    <td>@w.Patronymic</td>
                    <td>@w.Role</td>
                    <td>@w.IssueDate.ToShortDateString()</td>
                    <td>@w.BirthDate.ToShortDateString()</td>
                    <td>@w.Payment.ToString()</td>
                    <td>@w.Status</td>
                    @{
                        if (Accessor.HttpContext?.IsUserInRoles("admin","manager") == true)
                        {
                            <td>
                                <ul>
                                    <li>@Html.ActionLink("Редактировать", "BeginUpdate", entityName, new { id = w.ID })</li>
                                    @if (Accessor.HttpContext?.IsUserInRoles("admin") == true)
                                    {
                                        <li>@Html.ActionLink("Удалить", "Delete", entityName, new { id = w.ID }, htmlAttributes: new { onclick = "return confirm('Удалить запись?');" })</li>
                                    }
                                </ul>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
        <tfoot>
            @if (Accessor.HttpContext?.IsUserInRoles("admin","manager") == true)
            {
                @using (Html.BeginForm("Create", entityName, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <tr>
                        <td>Авто</td>
                        <td><input class="form-control" type="text" name="Name" /></td>
                        <td><input class="form-control" type="text" name="Surname" /></td>
                        <td><input class="form-control" type="text" name="Patronymic" /></td>
                        <td><input class="form-control" type="text" name="Role" /></td>
                        <td><input class="form-control" type="date" name="IssueDate" /></td>
                        <td><input class="form-control" type="date" name="BirthDate" /></td>
                        <td><input class="form-control" type="number" step="0.01" name="Payment" /></td>
                        <td><input class="form-control" type="text" name="Status" /></td>
                        <td><input class="btn btn-primary" type="submit" value="Добавить" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessage("Name", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Surname", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Patronymic", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Role", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("IssueDate", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("BirthDate", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Payment", "", new { @class = "text-danger" })</td>
                        <td>@Html.ValidationMessage("Status", "", new { @class = "text-danger" })</td>
                    </tr>
                }
            }
        </tfoot>
    </table>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
@{
    ViewData["Title"] = "Домашняя страница";
}

<div class="center_element">
    <h1>
        <i class="bi bi-tree-fill text-success me-2"></i>
        Доброго вам @DateTime.Now.ToShortTimeString(), @Accessor.HttpContext?.User?.Identity?.Name!
    </h1>

    <div class="mb-4">
        <p class="lead">
            <i class="bi bi-building-check me-2 text-primary"></i>
            Вас приветствует Система <strong>«Курсовая работа по теме Лесничество»</strong>
        </p>
    </div>

    <div class="mb-4">
        <h4><i class="bi bi-list-ul me-2 text-secondary"></i>Выберите одну из сущностей</h4>
        <ul class="list-unstyled">
            <li>
                <i class="bi bi-person-badge me-2 text-success"></i>
                @Html.ActionLink("Заказчики", "Index", "Customer", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-house-door me-2 text-success"></i>
                @Html.ActionLink("Лесные дачи", "Index", "Dacha", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-search me-2 text-info"></i>
                @Html.ActionLink("Осмотры", "Index", "Inspection", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-tools me-2 text-warning"></i>
                @Html.ActionLink("Инвентарь", "Index", "Item", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-map me-2 text-primary"></i>
                @Html.ActionLink("Карта", "Index", "Mapping", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-award me-2 text-warning"></i>
                @Html.ActionLink("Квалификации", "Index", "Qualification", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-diagram-3 me-2 text-secondary"></i>
                @Html.ActionLink("Квартальные сети", "Index", "QuartalNetwork", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-file-earmark-text me-2 text-info"></i>
                @Html.ActionLink("Отчёты", "Index", "Report", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-cart-check me-2 text-success"></i>
                @Html.ActionLink("Проданная древесина", "Index", "SoldWood", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-tree me-2 text-success"></i>
                @Html.ActionLink("Ещё не проданные деревья", "Index", "UnsoldWood", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-tree-fill me-2 text-success"></i>
                @Html.ActionLink("Типы деревьев", "Index", "WoodType", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-hammer me-2 text-dark"></i>
                @Html.ActionLink("Работы", "Index", "Work", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-people me-2 text-primary"></i>
                @Html.ActionLink("Работники", "Index", "Worker", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-gear me-2 text-secondary"></i>
                @Html.ActionLink("Типы работы", "Index", "WorkType", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-link-45deg me-2 text-info"></i>
                @Html.ActionLink("Связь N:M работ и работников", "Index", "WorkHasWorkers", new { area = "Entities" })
            </li>
            <li>
                <i class="bi bi-link-45deg me-2 text-info"></i>
                @Html.ActionLink("Связь N:M работ и инвентаря", "Index", "WorkHasInventory", new { area = "Entities" })
            </li>
        </ul>
    </div>

    <div class="mb-4">
        <h4><i class="bi bi-search-heart me-2 text-danger"></i>Поиск и хранимые процедуры</h4>
        <ul class="list-unstyled">
            <li>
                <i class="bi bi-binoculars me-2 text-info"></i>
                @Html.ActionLink("Глобальный поиск по имени", "Index", "Finding")
            </li>
            <li>
                <i class="bi bi-person-lines-fill me-2 text-primary"></i>
                @Html.ActionLink("Детализация работы работников", "Index", "Procedure")
            </li>
        </ul>
    </div>

    <div>
        <h4><i class="bi bi-gear-wide-connected me-2 text-dark"></i>Настройки Системы</h4>
        <ul class="list-unstyled">
            <li>
                <i class="bi bi-info-circle me-2 text-secondary"></i>
                @Html.ActionLink("О Себе", "About", "Home")
            </li>
            <li>
                <i class="bi bi-box-arrow-right me-2 text-danger"></i>
                @Html.ActionLink("Выйти из аккаунта", "Logout", "Authentification")
            </li>
        </ul>
    </div>
</div>
